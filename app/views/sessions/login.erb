<h3>Please Log In</h3>
<br>
<% if @error %>
    <h5 class="error">Error: <%= @error %></h5>
<% end %>
<form method="POST" action="/login">
    <h5>Username: </h5>
        <input type="text" id="username" name="user[username]">
    <h5>Password: </h5>
        <input type="password" id="password" name="user[password]">
        <br>
    <input type="submit" value="Log In">
</form>